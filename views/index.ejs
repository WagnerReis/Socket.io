<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<style>
  #chat{
    max-height: 500px;
    min-height: 500px;
    background-color: aliceblue;
    overflow-y: scroll;
  }
  #h1{
    text-align: center;
  }
</style>
<body>
  <h1 id="h1">Chat do Guia</h1>
  <div id="chat" class="container">

  </div><br>
  <div class="container">
    <input type="text" id="msg" class="form-control" placeholder="Escreva sua mensagem aqui"><br>
    <input type="text" name="" id="username" placeholder="Seu nome de usuÃ¡rio" class="form-control"><br>
    <div class="d-grid gap-2">
      <button onclick="enviar()" class="btn btn-primary btn-lg btn-block">Enviar</button>
    </div>
  </div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.2/socket.io.js"></script>
<script>
  var socket = io("http://localhost:3000");

  socket.on("disconnect", () => {
    console.log("Desconectado");
  });

  socket.on("showmsg", (data) => {
    console.log(data);
    var chat = document.getElementById("chat");
    var p = document.createElement("p");
    p.innerHTML = data.username + ": " + data.msg;
    chat.append(p);
  });

  function enviar(){
    var msgField = document.getElementById("msg");
    var usernameField = document.getElementById("username");

    var msg = msgField.value;
    var username = usernameField.value;

    socket.emit("msg", {msg, username});
  }

</script>
</html>